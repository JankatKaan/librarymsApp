@model IEnumerable<Member>

<h2>Üye Listesi</h2>
<a asp-controller="Member" asp-action="Create" class="btn btn-primary">Üye ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 10px;">@Html.DisplayNameFor(m=>m.MemberId)</th>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Surname)</th>
            <th>@Html.DisplayNameFor(m=>m.Email)</th>
            <th>@Html.DisplayNameFor(m=>m.Phone)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MemberId)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                <td>@Html.DisplayFor(modelItem=>item.Email)</td>
                <td>@Html.DisplayFor(modelItem=>item.Phone)</td>
                <td>
                    <a asp-controller="Member" asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-warning btn-sm">Details</a>
                    <a asp-controller="Member" asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
